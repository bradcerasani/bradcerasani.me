---
import { Caption, Figure, Intrinsic, MediaWrapper } from 'src/components';
import RawVideo from './RawVideo.astro';

const { src, caption, size, aspectRatio } = Astro.props;
---

<Figure size={size}>
  <Intrinsic aspectRatio={{ base: aspectRatio || '16 / 9' }}>
    <MediaWrapper>
      <RawVideo src={src} />
    </MediaWrapper>
  </Intrinsic>

  {caption && <Caption>{caption}</Caption>}
</Figure>
