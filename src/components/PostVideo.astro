---
import { Caption, Figure, Intrinsic } from 'src/components';
import RawVideo from './RawVideo.astro';

const { src, caption, size } = Astro.props;
---

<Figure size={size}>
  <Intrinsic aspectRatio={{ base: '16 / 9' }}>
    <RawVideo src={src} />
  </Intrinsic>

  {caption && <Caption>{caption}</Caption>}
</Figure>
